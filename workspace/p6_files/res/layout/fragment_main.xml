<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p6_files.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/file_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/file_name_hint" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/new_file_content"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/file_name_text"
        android:layout_below="@+id/file_name_text"
        android:ems="10"
        android:hint="@string/file_content_hint" />

    <Button
        android:id="@+id/new_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_file_content"
        android:layout_below="@+id/new_file_content"
        android:text="@string/new_file" />

</RelativeLayout>
